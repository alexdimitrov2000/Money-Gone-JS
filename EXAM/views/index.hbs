{{#if isLoggedIn}}
    <section class="actions">
        <form action="/user/refill" method="POST">
            <h2>Salary time? Refill your account amount.</h2>
            <input type="text" name="amount" id="refill-amount">
            <button type="submit">Refill</button>
        </form>
        <div>
            <h2>New expense comming up?</h2>
            <a href="/expense/add">Add it now</a>
        </div>
    </section>

    <hr class="separator">

    {{#each expenses}}
        <table class="expenses">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Merchant</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Description</th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="/images/date.png" />
                        <p>{{this.formattedDate}}</p>
                    </td>
                    <td>
                        <p>{{this.merchant}}</p>
                        {{#if this.isReport}}
                            <div class="report">
                                <a href="/expense/report/{{this._id}}">Report</a>
                            </div>
                        {{/if}}
                    </td>
                    <td>
                        <img src="/images/amount.png" alt="">
                        <p>{{this.amount}} лв</p>
                    </td>
                    <td>
                        <img src="/images/category.png" alt="">
                        <p>{{this.category}}</p>
                    </td>
                    <td>
                        <img src="/images/hastag.png" alt="">
                        <p>{{this.description}}</p>
                    </td>
                </tr>
            </tbody>
        </table>
    {{else}}
        <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
    {{/each}}
{{else}}
    <p class="guest-message">MoneyGone? The best expense tracker tool of all time!<br>Аre you new here? <a href="/user/register">Register</a> yourself!</p>
{{/if}}